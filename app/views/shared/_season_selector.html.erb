<div class="btn-group">
  <button type="button" class="btn bg-white dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= selected_season.to_s %>
  </button>
  <div class="dropdown-menu">
    <% Season.last(3).each do |s| %>
      <%= link_to s.to_s, current_path(season: s.to_param), class: 'dropdown-item' %>
    <% end %>
  </div>
</div>