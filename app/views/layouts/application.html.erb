<!DOCTYPE html>
<html lang="de">
  <%= render 'layouts/head' %>
  <body>
    <% if company_view? %>
      <%= render 'navigation/navbar_company_view' %>
    <% else %>
      <%= render 'navigation/navbar_main' %>
    <% end %>
    <div class="wrapper">

      <!-- Sidebar -->
      <nav id="sidebar" class="bg-light pt-3">
        <% if company_view? %>
          <%= render 'navigation/side_nav_company' %>
        <% else %>
          <%= render 'navigation/side_nav_driver' %>
        <% end %>
      </nav>

      <!-- Page Content -->
      <div id="content">
        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>
    </div>
    <footer class="bg-light">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-8">
            Fahrzeit.ch by innodrive GmbH - Kontakt: <%= link_to "info@fahrzeit.ch", "mailto:info@fahrzeit.ch" %>
          </div>
          <div class="col-md-4 d-none d-md-block text-right">
            <%= link_to "Webseite", "https://www.fahrzeit.ch" %> - <%= link_to "Datenschutz ErklÃ¤rung", "https://www.fahrzeit.ch/datenschutz"%>
          </div>
        </div>
      </div>
    </footer>
    <div class="modal" tabindex="-1" role="dialog" id="dynamicModal">
      <div class="modal-dialog" id="modal-content" role="document">

      </div>
    </div>
    <%= custom_bootstrap_flash %>
  </body>
</html>
