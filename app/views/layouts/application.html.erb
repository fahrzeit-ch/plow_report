<!DOCTYPE html>
<html lang="de">
  <%= render 'layouts/head' %>
  <body>
    <% if company_view? %>
      <%= render 'navigation/navbar_company_view' %>
    <% else %>
      <%= render 'navigation/navbar_main' %>
    <% end %>
    <div class="wrapper">

      <!-- Sidebar -->
      <nav id="sidebar" class="bg-dark">
        <% if company_view? %>
          <%= render 'navigation/side_nav_company' %>
        <% else %>
          <%= render 'navigation/side_nav_driver' %>
        <% end %>
      </nav>

      <!-- Page Content -->
      <div id="content">
        <div class="container-fluid">
          <%= yield %>
        </div>
      </div>

    </div>
    <%= custom_bootstrap_flash %>
    <%= render 'shared/feedback_widget' %>
  </body>
</html>
