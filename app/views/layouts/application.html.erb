<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= render 'layouts/favicon' %>

    <title>FAHRZEIT.ch</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <% if company_view? %>
        <%= render 'navigation/navbar_company_view' %>
      <% else %>
        <%= render 'navigation/navbar_main' %>
      <% end %>
      <div class="container-fluid">
        <%= yield %>
      </div>
    <% else %>
      <%= render 'navigation/navbar_signed_out' %>
      <div class="container">
        <%= yield %>
      </div>
    <% end %>
    <%= custom_bootstrap_flash %>
  </body>
</html>
