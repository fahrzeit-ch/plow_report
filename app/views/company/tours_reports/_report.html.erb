<li class="list-group-item d-flex flex-row align-items-center">
  <div class="p-2">
    <stong><%= report.start_date.to_s(:short) %> - <%= report.end_date.to_s(:short) %></stong>
  </div>
  <div class="p-2 ml-2">
    <% if report.excel_report.attached? %>
      <%= link_to t("actions.download_xlsx"), rails_blob_url(report.excel_report, disposition: "attachment") %>
    <% else %>
      <%= t("views.reports.generating") %>
    <% end %>
  </div>

  <% if local_assigns[:tools] && policy(report).destroy? %>
    <div class="align-self-center ml-auto mr-2 d-print-none">
      <%= link_to [current_company, report],
                  method: :delete,
                  class: 'pull-right btn btn-danger',
                  data: { confirm: t('confirmation.delete'),
                          disable_with: is_processing(true) } do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  <% end %>
</li>