<div id="company-member-form">
  <h5><%= t 'views.companies.drivers.add_new' %></h5>
  <%= form_with(model: company_driver, url: [current_company, company_driver], remote: true, builder: BootstrapFormBuilder, class: 'form-inline') do |f| %>
    <%= f.select :user_id, company_driver_user_selection_options, { prompt: 'Benutzer wÃ¤hlen' }, { class: 'custom-select col-sm-4' }%>
    <%= f.button type: :submit, class: 'col-sm-2 btn btn-primary', data: { disable_with: is_processing(true) } do %><i class="fa fa-check"></i><% end %>
  <% end %>
  <% if company_driver.errors.added?(:user, :taken) %>
    <div class="form-row">
      <div class="col-12 alert alert-danger">
        <% driver.errors[:user].each do |msg| %>
          <%= msg %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>