<li class="list-group-item" id="company-member-<%= company_member.id %>">
  <div class="row">
    <div class="col-sm-6 px-sm-4">
      <%= company_member.user.name_or_email %>
      <%= render 'invitation_status', member: company_member %>
    </div>
    <div class="col-sm-4">
      <%= t("activerecord.attributes.company_member.roles.#{company_member.role}") %>
    </div>
    <div class="col-sm-2">
      <%= link_to company_company_member_path(company_id: current_company.id, id: company_member),
                  method: :delete,
                  remote: false,
                  data: { confirm: delete_member_confirm_message(company_member), disable_with: is_processing(true) },
                  class: 'btn btn-danger float-right' do %>
        <i class="fa fa-trash"></i>
      <% end %>
    </div>
  </div>
</li>