<div class="card mt-3">
  <div class="card-header">
    <%= render 'navigation/company_edit_nav' %>
  </div>

  <div class="card-body">
    <h4 class="card-title"><%= link_to t('views.companies.customers.title'), company_customers_path(current_company) %> / <%= @customer.name %></h4>

    <h5><%= t'views.companies.customers.edit' %></h5>
    <%= form_for([current_company, @customer], builder: BootstrapFormBuilder) do |f| %>
      <div class="form-group">
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.submit class: 'btn btn-primary' do %><i class="fa fa-check"></i><% end %>
      </div>
    <% end %>

  </div>
</div>