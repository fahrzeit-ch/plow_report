<div class="row bg-white pt-3">
  <div class="col-sm-6">
    <h1><%= t 'views.companies.customers.title' %></h1>
  </div>
</div>
<div class="row toolbar border-top bg-light p-2 d-print-none">
  <div class="col">
    <form class="form form-inline">
      <!-- May insert search and filter -->
    </form>
  </div>
  <div class="col button-group">
    <%= link_to t('views.companies.customers.new'), new_company_customer_path(current_company), class: 'btn btn-primary float-right' %>
    <a href="#" data="print" class="btn btn-outline-primary d-print-none float-right"><i class="fa fa-print"></i> <%= t('actions.print') %></a>
  </div>
</div>

<% if @customers.empty? %>
  <%= empty_message('companies.customers') %>
<% else %>
  <%= content_card do %>
    <ul class="list-group list-group-flush">
      <%= render @customers %>
    </ul>
  <% end %>
<% end %>