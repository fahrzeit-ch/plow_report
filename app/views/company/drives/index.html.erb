<div class="row bg-white pt-3">
  <div class="col-sm-6">
    <h1><%= t 'views.company_drives.title' %></h1>
  </div>
  <div class="col-auto ml-auto">
    <%= render 'shared/season_selector' %>
  </div>
</div>
<div class="row toolbar border-top bg-light p-2 d-print-none">
  <div class="col-10">
    <form class="form form-inline">
      <div class="form-group mr-2">
        <label class="label mr-2"><%= Driver.model_name.human %></label>
        <%= select_tag(:driver_id,
                       options_from_collection_for_select(current_company.drivers, 'id', 'name', params[:driver_id]),
                       data: {s2: true, submit_on_change: true},
                       include_blank: t('common.all')) %>
      </div>
      <% if(drive_attr_enabled?(:customer)) %>
        <div class="form-group">
          <label class="mr-2"><%= Customer.model_name.human %></label>
          <%= select_tag(:customer_id,
                         options_from_collection_for_select(current_company.customers, 'id', 'name', params[:customer_id]),
                         data: {s2: true, submit_on_change: true},
                         include_blank: t('common.all')) %>
        </div>
      <% end %>
    </form>
  </div>
  <div class="col-sm-2">
    <a href="javascript:window.print()" class="btn btn-primary d-print-none float-right"><i class="fa fa-print"></i> <%= t('actions.print') %></a>
  </div>
</div>
<div class="row mt-3">
  <div class="col-12">
    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex">
          <div class="mr-5">
            <h3>Total Km</h3>
            <strong><%= @stats['distance'] %></strong>
          </div>
          <div>
            <h3>Fahrzeit</h3>
            <strong><%= @stats.duration_as_string %></strong>
          </div>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-12">
            <div id="drives">
              <%= render partial: '/drives/drive_list', locals: { drives: @drives } %>
            </div>

            <%= paginate @drives %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>