<div class="row bg-white pt-3">
  <div class="col-sm-6">
    <h1><%= t 'views.company_tours.title' %></h1>
  </div>
  <div class="col-auto ml-auto">
    <%= render 'shared/season_selector' %>
  </div>
</div>
<div class="row toolbar border-top bg-light p-2 d-print-none">
  <div class="col">
    <form class="form form-inline">
      <div class="btn-group mr-4" role="group">
        <%= link_to company_tours_path, class: "btn btn-secondary  #{current_page?(controller: :tours, action: :index) ? 'active' : ''}" do %>
          <i class="fa fa-location-arrow"></i> Touren
        <% end %>
        <%= link_to company_drives_path, class: "btn btn-secondary #{current_page?(controller: :drives, action: :index) ? 'active' : ''}" do %>
          <i class="fa fa-truck"></i> Fahrten ohne Tour
        <% end %>
      </div>
      <div class="form-group mr-2">
        <label class="label mr-2"><%= Driver.model_name.human %></label>
        <%= select_tag(:driver_id,
                       options_from_collection_for_select(current_company.drivers.order(:name), 'id', 'name', params[:driver_id]),
                       class: 'dropdown-select',
                       data: {s2: true, submit_on_change: true},
                       include_blank: t('common.all')) %>
      </div>
    </form>
  </div>
  <div class="col-3 button-group">
    <a href="javascript:window.print()" class="btn btn-outline-primary d-print-none float-right"><i class="fa fa-print"></i> <%= t('actions.print') %></a>
  </div>
</div>
<div class="row mt-3">
  <div class="col-12">
    <div class="card mb-3">
      <div class="card-body">
        <div class="d-flex">
          <div class="mr-5">
            <h3>Total Km</h3>
            <strong><%= @stats.distance %></strong>
          </div>
          <div class="mr-5">
            <h3>Fahrzeit</h3>
            <strong><%= @stats.duration_as_string %></strong>
          </div>
          <% @stats.activity_values.each do |av| %>
            <div class="mr-5">
              <h3><%= av[:title] %></h3>
              <strong><%= av[:total] %></strong>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card">
      <div class="card-body">
        <div class="row">
          <div class="col-12">
            <div id="tours">
              <%= render partial: 'tour', collection: @records, locals: { tools: true} %>
            </div>

            <%= paginate @records %>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>