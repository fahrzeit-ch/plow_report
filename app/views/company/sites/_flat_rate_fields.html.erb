<div class="form-row">
  <div class="form-group col-md-6">
    <div class="custom-control custom-checkbox">
      <%= form.check_box :active, class: 'custom-control-input', data: { disable_on_change: form.object_name.gsub(/[\[\]]+/, '_')+"price"} %>
      <%= form.label :active, class: 'custom-control-label' %>
    </div>
  </div>
</div>
<div class="form-group">
  <div class="input-group">
    <%= form.text_field :price, disabled: !form.object.active %>
      <div class="input-group-append">
          <span class="input-group-text" id="basic-addon2"><%= form.object.price.currency %></span>
      </div>
  </div>
</div>
<%= form.hidden_field :valid_from, value: Season.current.start_date %>