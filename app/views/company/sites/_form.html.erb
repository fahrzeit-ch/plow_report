<div id="company-member-form">
  <%= form_with(model: @site, url: [current_company, @customer, @site], builder: BootstrapFormBuilder, local: true, disabled: true) do |f| %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :name%>
        <%= f.text_field :name, autofocus: true  %>
        <small class="form-text text-muted">
          <i class="fa fa-info"></i> <%= t 'views.companies.sites.name_info' %>
        </small>
      </div>
    </div>
    <% if f.object.persisted? %>
    <div class="form-row">
      <div class="form-group">
        <div class="custom-control custom-checkbox">
          <%= f.check_box :active, class: 'custom-control-input', id: 'site_active' %>
          <%= f.label :active, class: 'custom-control-label' %>
        </div>
        <small class="form-text text-muted">
          <i class="fa fa-info"></i> <%= t 'views.companies.sites.activation_status_info' %>
        </small>
      </div>
    </div>
    <% end %>
    <div class="form-row">
      <div class="form-group col-md-10">
        <%= f.label :street %>
        <%= f.text_field :street %>
      </div>
      <div class="form-group col-md-2">
        <%= f.label :nr %>
        <%= f.text_field :nr %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <%= f.label :zip %>
        <%= f.text_field :zip %>
      </div>
      <div class="form-group col-md-8">
        <%= f.label :city %>
        <%= f.text_field :city %>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit class: 'btn btn-primary', data: { disable_with: is_processing(true) } do %><i class="fa fa-check"></i><% end %>
    </div>
  <% end %>
</div>