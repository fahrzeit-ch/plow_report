<div class="col-lg-6">
  <div class="card">
    <div class="card-header">
      <ul class="nav nav-tabs card-header-tabs" id="sites-form-tabs">
        <li class="nav-item">
          <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general">Allgemein</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="pricing-tab" data-toggle="tab" href="#pricing">Pauschalen</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="info-tab" data-toggle="tab" href="#info">Zusatz Infos</a>
        </li>
      </ul>
    </div>
    <%= form_with(model: @site, url: [current_company, @customer, @site], builder: BootstrapFormBuilder, local: true, disabled: true) do |f| %>
      <div class="card-body tab-content" id="sites-form-content">
        <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
          <%= render 'company/sites/general_fields', f: f %>
        </div>
        <div class="tab-pane fade show" id="pricing" role="tabpanel" aria-labelledby="pricing-tab">
          <%= render 'company/sites/pricing_fields', f: f %>
        </div>
        <div class="tab-pane fade show" id="info" role="tabpanel" aria-labelledby="pricing-tab">
          <%= render 'company/sites/additional_info', f: f %>
        </div>
        <div class="form-group">
          <%= f.button type: :submit, class: 'btn btn-primary', data: { disable_with: is_processing(true) } do %>
            <i class="fa fa-check"></i> <%= t 'actions.save' %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>