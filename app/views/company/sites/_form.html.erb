<div id="company-member-form">
  <%= form_with(model: @site, url: [current_company, @customer, @site], builder: BootstrapFormBuilder, local: true, disabled: true) do |f| %>
    <%= f.hidden_field :area_features, id: 'mapData' %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :display_name %>
        <%= f.text_field :display_name, autofocus: true  %>
        <small class="form-text text-muted">
          <i class="fa fa-info"></i> <%= t 'views.companies.sites.name_info' %>
        </small>
      </div>
    </div>
    <% if f.object.persisted? %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <div class="custom-control custom-checkbox">
          <%= f.check_box :active, class: 'custom-control-input', id: 'site_active' %>
          <%= f.label :active, class: 'custom-control-label' %>
        </div>
        <small class="form-text text-muted">
          <i class="fa fa-info"></i> <%= t 'views.companies.sites.activation_status_info' %>
        </small>
      </div>
    </div>
    <% end %>
    <div class="form-row">
      <div class="form-group col-md-6">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-10">
        <%= f.label :street %>
        <%= f.text_field :street, id: 'route' %>
      </div>
      <div class="form-group col-md-2">
        <%= f.label :nr %>
        <%= f.text_field :nr, id: 'street_number' %>
      </div>
    </div>
    <div class="form-row">
      <div class="form-group col-md-4">
        <%= f.label :zip %>
        <%= f.text_field :zip, id: 'postal_code' %>
      </div>
      <div class="form-group col-md-8">
        <%= f.label :city %>
        <%= f.text_field :city, id: 'locality' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.button type: :submit, class: 'btn btn-primary', data: { disable_with: is_processing(true) } do %>
        <i class="fa fa-check"></i> <%= t 'actions.save' %>
      <% end %>
    </div>
  <% end %>
</div>