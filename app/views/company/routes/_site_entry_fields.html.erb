<li class="list-group-item nested-fields">
  <div class="d-flex flex-row align-items-center">
    <div class="form-group">
      <i class="fa fa-arrows"></i>
    </div>
    <div class="flex-grow-1 mr-3 ml-3">
      <%= f.select :site_id, available_sites(f.object.route).pluck(:display_name, :id), hide_label: true, include_blank: true %>
      <%= f.hidden_field :position, class: 'position-attr' %>
    </div>
    <div class="form-group">
      <%= link_to_remove_association( t("x"), f, class: "btn btn-outline-danger") %>
    </div>
  </div>
</li>