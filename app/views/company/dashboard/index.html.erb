<div class="row mt-3">
  <div class="col-12">
    <h1><%= t 'views.companies.dashboard.title' %></h1>
  </div>
</div>
<div class="row mt-3">
  <div class="col-sm-4 col-lg-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex flex-row">
          <div class="round round-lg align-self-center round-info">
            <i class="fa fa-arrows-h"></i>
          </div>
          <div class="ml-5 align-self-center">
            <h3 class="mb-0 font-light"><%= @statistics.distance %></h3>
            <h5 class="mb-0 font-light"><%= t 'dashboard.cards.total_km.title' %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-4 col-lg-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex flex-row">
          <div class="round round-lg align-self-center round-info">
            <i class="fa fa-clock-o"></i>
          </div>
          <div class="ml-5 align-self-center">
            <h3 class="mb-0 font-light"><%= @statistics.duration %></h3>
            <h5 class="mb-0 font-light"><%= t 'dashboard.cards.total_hrs.title' %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-4 col-lg-3">
    <div class="card">
      <div class="card-body">
        <div class="d-flex flex-row">
          <div class="round round-lg align-self-center round-info">
            <i class="fa fa-balance-scale"></i>
          </div>
          <div class="ml-5 align-self-center">
            <h3 class="mb-0 font-light"><%= @statistics.salt %></h3>
            <h5 class="mb-0 font-light"><%= t 'dashboard.cards.total_salt.title' %></h5>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row mt-5">
  <div class="col-12">
    <%= render 'last_drives' %>
  </div>
</div>