<li class="list-group-item d-flex flex-row align-items-center" id="company-member-<%= activity.id %>">
  <div class="p-2"><%= activity.name %> <br><small><%= activity.value_label %></small></div>
  <div class="ml-auto p-2">
    <%= link_to edit_company_activity_path(company_id: current_company.id, id: activity), class: 'text-muted', title: t('views.companies.activities.edit') do %>
      <i class="fa fa-edit"></i>
    <% end %>
  </div>
  <div>
    <% unless activity.activity_executions.any? %>
      <%=  link_to company_activity_path(company_id: current_company.id, id: activity),
                    method: :delete,
                    data: { disable_with: is_processing(true) },
                    class: 'text-muted' do  %>
        <i class="fa fa-trash"></i>
      <%  end  %>
    <%  end %>
  </div>
</li>