<%= form_for([current_company, @activity], builder: BootstrapFormBuilder) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <div class="form-check">
      <%= f.check_box :has_value, class: 'form-check-input' %>
      <%= f.label :has_value, class: 'form-check-label' %>
    </div>
    <div class="form-group mt-2" id="value-label">
      <%= f.label :value_label%>
      <%= f.text_field :value_label %>
    </div>
  </div>

  <hr>
  <div class="form-group">
    <%= f.button type: :submit, class: 'btn btn-primary', data: { disable_with: is_processing(true) } do %><i class="fa fa-check"></i> <%= t('actions.save') %><% end %>
  </div>
<% end %>