<%= form_with(model: record, local: true, url: standby_date_ranges_path, builder: BootstrapFormBuilder) do |form| %>
  <div class="form-row">
    <div class="form-group col-sm-6">
      <%= form.label :start_date %>
      <%= form.text_field :start_date, value: form.object.start_date.strftime('%Y-%m-%d'), type: 'date', required: true, id: :drive_start_date %>
    </div>

    <div class="form-group col-sm-6">
      <%= form.label :end_date %>
      <%= form.text_field :end_date, value: form.object.end_date.strftime('%Y-%m-%d'),
                          type: 'date',
                          required: true,
                          id: :drive_end_date %>
    </div>
  </div>

  <div class="actions">
    <%= form.button type: :submit, class: 'btn btn-primary', data: { disable_with: is_processing }  do %>
      <%= t('actions.save') %>
    <% end %>
  </div>
<% end %>