<% if drive_attr_enabled?(:customer) %>
<div class="form-group col-md-2 col-lg-1">
  <%= form.label :customer %>
  <%= form.customer_select %>
</div>
<% end %>
<div class="form-group col-md-2 col-lg-1">
  <%= form.label :activity %>
  <div class="form-group">
    <% available_activities(current_company).each do |activity| %>
      <div class="custom-control custom-radio">
        <%= form.activity_choice(activity) %>
      </div>
    <% end %>
  </div>
</div>
<div class="form-group col-md-2 col-lg-1 <%= form.object.activity_execution.try(:activity).try(:has_value) ? '' : 'collapse' %>" id="activity_value">
  <%= label_tag 'drive[activity_execution_attributes][activity_value]', form.object.activity_execution.try(:activity).try(:value_label), id: :activity_value_label%>
  <%= number_field_tag 'drive[activity_execution_attributes][value]',
                       form.object.activity_execution.try(:value),
                       min: '0',
                       step: '0.01',
                       id: :activity_value_field,
                       class: 'form-control' %>
</div>
<div class="form-group col-md-2 col-lg-1">
  <%= form.label :distance_km %>
  <%= form.text_field :distance_km, type: 'number', required: true, min: '0', step: '0.1', id: :drive_distance_km, class: 'form-control autoselect' %>
</div>