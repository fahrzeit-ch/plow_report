<div class="row bg-white pt-3">
  <div class="col-sm-6">
    <h1>Fahrten <span class="d-print-inline d-none"><%= current_driver.name %></span></h1>
  </div>
  <div class="col-sm-6 button-group">
    <%= link_to 'Neue Fahrt erfassen', new_drife_path, class: 'btn btn-primary d-print-none float-right' %>
    <a href="#" data="print" class="btn btn-outline-primary d-print-none float-right"><i class="fa fa-print"></i> <%= t('actions.print') %></a>
  </div>
</div>
<div class="row d-print-none">
  <div class="card text-dark bg-light col-12">
    <div class="card-body">
      <h5 class="card-title"><%= t 'dashboard.cards.new_drive.title' %></h5>
      <%= form_with(model: build_drive, local: true, builder: DriveFormBuilder) do |form| %>
        <div class="form-row">
          <div class="form-group col-md-2">
            <%= form.label :start %>
            <%= form.text_field :start, value: form.object.end.strftime('%H:%M'), type: 'time', step: '60', required: true, id: :drive_start, class: 'form-control' %>
          </div>

          <div class="form-group col-md-2">
            <%= form.label :end  %>
            <%= form.text_field :end, value: form.object.end.strftime('%H:%M'), type: 'time', step: '60', required: true, id: :drive_end, class: 'form-control' %>
          </div>
          <%= render 'drives/attribute_fields', form: form %>
          <div class="col-12">
            <%= form.button type: :submit, class: 'btn btn-secondary', data: { disable_with: is_processing } do %>
              <i class="fa fa-check"></i> <%= t('dashboard.cards.new_drive.create') %>
            <% end %>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
<div class="card mt-3">
  <div class="card-body">
    <div class="row">
      <div class="col-12">
        <%= render partial: '/drives/drive_list', locals: {drives: @drives} %>
        <% if @drives.empty? %>
          <div>
            <%= t 'views.common.info.no_data_available' %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
</div>