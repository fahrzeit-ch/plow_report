{
  "addons": [
    "heroku-postgresql",
    "heroku-redis",
    "heroku-scheduler"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ],
  "env": {
    "HOST": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "MAIL_PW": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_LOG_TO_STDOUT": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "required": true
    }
  },
  "formation": {
    "resque": {
      "quantity": 1
    },
    "web": {
      "quantity": 1
    }
  },
  "name": "plow_report",
  "scripts": {
    "postdeploy": "db:schema:load"
  },
  "stack": "heroku-16"
}
